<head>
    <link rel='stylesheet' href='/technical-styles/oauth2-key-generation.css' />
    <script src='/technical-scripts/oauth2-key-generation.js' defer></script>
</head>

<body>
    <section>
        <ul class="nav nav-tabs" id="keyManagerTabs" role="tablist">
            {{#each keyManagersMetadata}}
            <li class="nav-item" role="presentation">
                <a class="nav-link {{#if @first}}active{{/if}}" id="tab-{{id}}" data-bs-toggle="tab"
                    href="#tab-content-{{id}}" role="tab" aria-controls="tab-content-{{id}}"
                    aria-selected="{{#if @first}}true{{else}}false{{/if}}">
                    {{name}}
                </a>
            </li>
            {{/each}}
        </ul>

        <!-- KM Content -->
        <div class="tab-content" id="keyManagerTabsContent">
            {{#each keyManagersMetadata}}
            <div class="tab-pane fade {{#if @first}}show active{{/if}}" id="tab-content-{{id}}" role="tabpanel"
                aria-labelledby="tab-{{id}}">
                <div class='container my-5'>
                    <div class='form-card p-5'>
                        <h2 class='title mb-4'>{{name}}</h2>

                        <p class='text-muted mb-4'>
                            Key Configuration for {{name}}
                        </p>
                        <form id='oauth2KeyGenerateForm-{{id}}'>

                            {{!-- Token Endpoint --}}
                            <div class='mb-3'>
                                <label for='token-endpoint-{{id}}' class='form-label'>
                                    Token Endpoint
                                    <span class='text-danger'>*</span>
                                </label>
                                <input type='url' id='token-endpoint-{{id}}' class='form-control'
                                    value='{{tokenEndpoint}}' disabled />
                            </div>

                            {{!-- Revoke Endpoint --}}
                            <div class='mb-3'>
                                <label for='revoke-endpoint-{{id}}' class='form-label'>
                                    Revoke Endpoint
                                    <span class='text-danger'>*</span>
                                </label>
                                <input type='url' id='revoke-endpoint-{{id}}' class='form-control'
                                    value='{{revokeEndpoint}}' disabled />
                            </div>

                            {{!-- Grant Types --}}
                            <div class="mb-3">
                                <label for="available-grant-types-{{id}}" class="form-label">
                                    Available Grant Types
                                    <span class="text-danger">*</span>
                                </label>
                                <div class="row">
                                    {{#each availableGrantTypes}} 
                                    <div class="col-md-4 mb-2">
                                        <div class="form-check">
                                            <input type="checkbox" class="form-check-input"
                                                id="grant-type-{{this}}-{{id}}" name="availableGrantTypes"
                                                value="{{this}}" {{#if (eq this ../default)}}checked{{/if}}
                                            />
                                            <label class="form-check-label" for="grant-type-{{this}}-{{id}}">
                                                {{this}}
                                            </label>
                                        </div>
                                    </div>
                                    {{/each}}
                                </div>
                            </div>

                            {{!-- Callback URL --}}
                            {{!-- This needs to be further investigate --}}
                            <div class='mb-3'>
                                <label for='callback-url-{{id}}' class='form-label'>
                                    Callback URL
                                    <span class='text-danger'>*</span>
                                </label>
                                <input type='url' id='callback-url-{{id}}' class='form-control'
                                    value='http://sample.com/callback/url' disabled />
                            </div>



                            <!-- Additional Configuration Fields -->
                            {{#each applicationConfiguration}}
                            <div class="mb-3">
                                <label for="{{name}}-{{id}}" class="form-label">
                                    {{label}}
                                    {{#if required}}<span class="text-danger">*</span>{{/if}}
                                </label>

                                {{#if (eq type 'input')}}
                                <input type="text" id="{{name}}-{{id}}" class="form-control" value="{{default}}" {{#if
                                    required}}required{{/if}} />
                                {{/if}}

                                {{#if (eq type 'select')}}
                                <select id="{{name}}-{{id}}" class="form-control" {{#if required}}required{{/if}}>
                                    {{#each values}}
                                    <option value="{{this}}" {{#if (eq this ../default)}}selected{{/if}}>{{this}}
                                    </option>
                                    {{/each}}
                                </select>
                                {{/if}}

                                {{#if (eq type 'checkbox')}}
                                <div class="form-check">
                                    <input type="checkbox" id="{{name}}-{{id}}" class="form-check-input" {{#if
                                        default}}checked{{/if}} />
                                    <label class="form-check-label" for="{{name}}-{{id}}">
                                        {{label}}
                                    </label>
                                </div>
                                {{/if}}

                            </div>
                            {{/each}}

                            <div class="d-flex justify-content-end gap-3">
                                <button class="btn btn-primary custom-save-btn" id="oauth2KeyGenerateButton-{{id}}"
                                    name="http-values" type="button"
                                    onClick="generateOauth2Key('{{id}}', {{../../isProduction}})">
                                    Generate Keys
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </section>
</body>