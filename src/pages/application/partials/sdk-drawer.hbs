<!-- SDK Generation Cancel Confirmation Modal -->
<div class="modal custom-modal" id="sdkCancelConfirmModal" style="display: none;">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content custom-modal-content">
            <div class="custom-modal-body">
                <h4 class="confirmation-title">Are you sure you want to cancel the SDK Generation?</h4>
                <p class="confirmation-text">
                    This action will be irreversible and SDK generation will be stopped. Please click the <strong>Yes</strong> button to abort the process.
                </p>
                
                <div class="button-container">
                    <button class="common-btn-outlined" type="button" onclick="closeSdkCancelConfirmModal()">
                        Cancel
                    </button>
                    <button class="common-btn-primary btn-danger" type="button" onclick="confirmSdkCancellation()">
                        Yes
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

