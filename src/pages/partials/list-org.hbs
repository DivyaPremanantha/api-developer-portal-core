<section>
        <div class="card mb-4">
            <div class="card-header">
                <h3 class="card-title">Organizations</h3>
            </div>
            {{#organizations}}
            <div class="organization mb-3">
                <div class="organization-header" style="padding: 10px;">
                    <div class="mb-3 organization-name">{{orgName}}</div>
                    <div class="d-flex align-items-center">
                        <button class="btn btn-sm btn-outline-primary me-2 edit-btn" id="idpEdit">
                            <i class="bi bi-pencil"></i> Edit
                        </button>
                        <form class="delete-org mb-0"></form>
                            <button type="submit" class="btn btn-sm btn-outline-danger"
                                onclick="return confirm('Are you sure you want to delete this IDP?');">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                            <input type="hidden" id="orgId" class="orgId" name="orgId" value={{orgID}}>
                        </form>
                    </div>
                </div>
                <div class="organization-details card-body">
                    <form id="editOrg" class="editOrg">
                        <div class="mb-3">
                            <label for="orgName" class="form-label">Name</label>
                            <input type="text" class="form-control orgName" id="orgName" name="orgName"
                                value={{orgName}}>
                        </div>
                        <div class="mb-3">
                            <label for="business-owner" class="form-label">Business Owner</label>
                            <input type="text" class="form-control businessOwner" id="businessOwner"
                                name="businessOwner" value={{businessOwner}}>
                        </div>
                        <div class="mb-3">
                            <label for="business-owner-contact" class="form-label">Business Owner Contact</label>
                            <input type="text" class="form-control businessOwnerContact" id="businessOwnerContact"
                                name="businessOwnerContact" value={{businessOwnerContact}}>
                        </div>
                        <div class="mb-3">
                            <label for="business-owner-email" class="form-label">Business Owner Email</label>
                            <input type="text" class="form-control businessOwnerEmail" id="businessOwnerEmail"
                                name="businessOwnerEmail" value={{businessOwnerEmail}}>
                        </div>
                        <input type="hidden" id="orgId" name="orgId" value={{orgID}}>
                        <div class="text-end">
                            <button type="submit" class="btn btn-primary">Save Changes</button>
                        </div>
                    </form>
                </div>
            </div>
            {{/organizations}}
        </div>
   
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const editButtons = document.querySelectorAll('.edit-btn');
            editButtons.forEach(button => {
                button.addEventListener('click', function () {
                    const details = this.closest('.organization').querySelector('.organization-details');
                    if (details.style.display === 'block') {
                        details.style.display = 'none';
                        this.textContent = 'Edit';
                    } else {
                        details.style.display = 'block';
                        this.textContent = 'Close';
                    }
                });
            });
            const editOrgs = document.querySelectorAll('.editOrg');
            const deleteForms = document.querySelectorAll('.delete-org');
            deleteForms.forEach(form => {
                form.addEventListener('submit', async (e) => {
                    const orgID = form.querySelector('#orgId').value;
                    const response = await fetch(`/devportal/organizations/${orgID}`, {
                        method: 'DELETE'
                    });
                    if (response.ok) {
                        window.location.href = '/portal/';
                    } else {
                        alert(`Field validation failed`);
                    }
                });
            });
            editOrgs.forEach(form => {
                form.addEventListener('submit', async (e) => {
                    e.preventDefault();
                    const orgName = form.querySelector('#orgName').value;
                    const businessOwner = form.querySelector('#businessOwner').value;
                    const businessOwnerContact = form.querySelector('#businessOwnerContact').value;
                    const businessOwnerEmail = form.querySelector('#businessOwnerEmail').value;
                    const orgID = form.querySelector('#orgId').value;
                    console.log(orgID);
                    const response = await fetch(`/devportal/organizations/${orgID}`, {
                        method: 'PUT',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({
                            orgName,
                            businessOwner,
                            businessOwnerContact,
                            businessOwnerEmail
                        })
                    });
                    if (response.ok) {
                        window.location.href = '/portal/';
                    } else {
                        alert(`Field validation failed`);
                    }
                });
            });
        });
    </script>
</section>