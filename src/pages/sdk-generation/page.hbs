<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SDK Generation</title>
    <link rel='stylesheet' href='/technical-styles/sdk-generation.css' />
</head>

<body>
    <div class="sdk-generation-container">
        <!-- Header Section -->
        <div class="sdk-header">
            <div class="d-flex align-items-center mb-3">
                <button class="btn btn-link back-btn" onclick="goBack()">
                    <i class="bi bi-arrow-left"></i>
                </button>
                <h2 class="mb-0 ms-2">SDK Generation</h2>
            </div>
            <p class="sdk-description">
                Generate SDKs for your subscribed APIs. Select the APIs you want to include in your SDK package.
            </p>
        </div>

        <!-- Application Info -->
        {{#applicationMetadata}}
        <div class="application-info-card mb-4">
            <div class="d-flex align-items-center">
                <i class="bi bi-app-indicator me-2"></i>
                <div>
                    <h5 class="mb-1">{{name}}</h5>
                    <p class="text-muted mb-0">Application ID: {{id}}</p>
                </div>
            </div>
        </div>
        {{/applicationMetadata}}

        <!-- API Selection Section -->
        <div class="api-selection-section">
            <div class="section-header d-flex justify-content-between align-items-center mb-3">
                <h4>Subscribed APIs</h4>
                <div class="selection-controls">
                    <button class="btn btn-outline-primary btn-sm" onclick="selectAllAPIs()">
                        Select All
                    </button>
                    <button class="btn btn-outline-secondary btn-sm ms-2" onclick="clearAllSelections()">
                        Clear All
                    </button>
                </div>
            </div>

            {{#if subAPIs}}
            <div class="apis-grid">
                {{#each subAPIs}}
                <div class="api-card" data-api-id="{{apiID}}">
                    <div class="api-card-content">
                        <div class="api-checkbox-container">
                            <input type="checkbox" class="api-checkbox" id="api-{{apiID}}" value="{{apiID}}">
                        </div>
                        <div class="api-info">
                            <div class="api-icon">
                                {{#if image}}
                                <img src="{{image}}" alt="{{name}}" onerror="this.src='/images/apisHeroImg.svg'">
                                {{else}}
                                <i class="bi bi-code-square"></i>
                                {{/if}}
                            </div>
                            <div class="api-details">
                                <h6 class="api-name">{{name}}</h6>
                                <p class="api-version">Version: {{version}}</p>
                                <span class="api-type-badge">{{apiType}}</span>
                            </div>
                        </div>
                    </div>
                    <label for="api-{{apiID}}" class="api-card-overlay"></label>
                </div>
                {{/each}}
            </div>
            {{else}}
            <div class="no-apis-message">
                <div class="text-center py-5">
                    <i class="bi bi-inbox display-4 text-muted"></i>
                    <h5 class="mt-3 text-muted">No Subscribed APIs</h5>
                    <p class="text-muted">This application is not subscribed to any APIs yet.</p>
                    <a href="../.." class="btn btn-primary">Browse APIs</a>
                </div>
            </div>
            {{/if}}
        </div>

        <!-- SDK Configuration Section -->
        <div class="sdk-config-section mt-4">
            <h4 class="mb-3">SDK Configuration</h4>
            <div class="config-form">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label for="sdkLanguage" class="form-label">Programming Language</label>
                            <select class="form-select" id="sdkLanguage">
                                <option value="javascript">JavaScript</option>
                                <option value="python">Python</option>
                                <option value="java">Java</option>
                                <option value="csharp">C#</option>
                                <option value="go">Go</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label for="sdkName" class="form-label">SDK Name</label>
                            <input type="text" class="form-control" id="sdkName" 
                                   value="{{applicationMetadata.name}}-sdk" placeholder="Enter SDK name">
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Generation Section -->
        <div class="generation-section mt-4">
            <div class="d-flex justify-content-between align-items-center">
                <div class="selected-count">
                    <span id="selectedCount">0</span> API(s) selected
                </div>
                <div class="generation-controls">
                    <button class="btn btn-primary" id="generateBtn" disabled>
                        <span class="button-normal-state">
                            <i class="bi bi-download me-1"></i> Generate SDK
                        </span>
                        <span class="button-loading-state" style="display: none;">
                            <span class="spinner-border spinner-border-sm me-1" role="status"></span>
                            Generating...
                        </span>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Success Modal -->
    <div class="modal fade" id="successModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="bi bi-check-circle-fill text-success me-2"></i>
                        SDK Generated Successfully
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>Your SDK and application code have been generated successfully!</p>
                    <div id="downloadInfo" style="display: none;">
                        <p class="mb-2">Your package includes:</p>
                        <ul class="mb-3">
                            <li>Generated SDK for your selected APIs</li>
                            <li>Sample application code demonstrating API usage</li>
                            <li>Documentation and setup instructions</li>
                        </ul>
                        <p class="mb-2">Download will start automatically. If not, click the button below:</p>
                        <a id="downloadLink" class="btn btn-success" href="#" download>
                            <i class="bi bi-download me-1"></i> Download SDK + Application
                        </a>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <script src="/technical-scripts/sdk-generation.js"></script>
</body>

</html>
